# =============================================================================
# ADDITIONAL VFD CONFIGURATION
# =============================================================================

# VFD Transfer Configuration
VFD_TRANSFER_FEE=0
VFD_MINIMUM_TRANSFER_AMOUNT=100
VFD_MAXIMUM_TRANSFER_AMOUNT=1000000

# VFD Service Charge Configuration
VFD_SERVICE_CHARGE_PERCENTAGE=2.5

# VFD Account Types
VFD_CORPORATE_ACCOUNT_TYPE=corporate
VFD_INDIVIDUAL_ACCOUNT_TYPE=individual

# VFD API Timeout Settings
VFD_API_TIMEOUT=30000
VFD_WEBHOOK_TIMEOUT=10000

# VFD Logging Configuration
VFD_ENABLE_LOGGING=true
VFD_LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# VFD API Security
VFD_ENABLE_SIGNATURE_VERIFICATION=true
VFD_SIGNATURE_ALGORITHM=SHA512

# VFD Rate Limiting
VFD_RATE_LIMIT_REQUESTS=100
VFD_RATE_LIMIT_WINDOW=60000

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================

# Enable VFD API debugging
VFD_DEBUG_MODE=true
VFD_LOG_API_CALLS=true

# Mock VFD responses for development (set to false in production)
VFD_MOCK_RESPONSES=false 