# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# VFD API Configuration - Localhost/Sandbox Environment
NEXT_PUBLIC_VFD_BASE_URL=https://sandbox-api.vfd.com.ng
VFD_ACCESS_TOKEN=sandbox_access_token_12345
VFD_WALLET_NAME=test_wallet
VFD_WEBHOOK_SECRET=sandbox_webhook_secret_12345
VFD_ENVIRONMENT=sandbox

# VFD API Credentials (if different from access token)
VFD_API_KEY=sandbox_api_key_12345
VFD_API_SECRET=sandbox_api_secret_12345

# VFD Webhook URL for localhost development
VFD_WEBHOOK_URL=http://localhost:3000/api/webhooks/vfd

